<% @page_title = "Projects" %>

<div class="header">
  <h1 class="header__title">Projects</h1>
  <div class="header__actions">
    <%= link_to "New Project", new_project_path, class: "btn btn--primary" %>
  </div>
</div>

<div class="cards--grid margin-block-start">
  <% @projects.each do |project| %>
    <div class="card" style="--card-color: var(--color-ink-medium)">
      <header class="card__header">
        <div class="card__board">
          <%= link_to project.name, project_path(project), class: "txt-reversed txt-undecorated" %>
        </div>
      </header>

      <div class="card__body">
        <div class="card__content">
          <div class="txt-medium txt-tight-lines overflow-line-clamp" style="--lines: 4">
            <%= project.description %>
          </div>
        </div>
      </div>

      <footer class="margin-block-start-auto pad-block-end flex justify-end gap-half" style="z-index: 2">
        <%= link_to "Report", report_project_path(project), class: "btn btn--small" %>
        <%= link_to "Edit", edit_project_path(project), class: "btn btn--small" %>
        <%= link_to "Delete", project_path(project), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn--small btn--danger" %>
      </footer>
    </div>
  <% end %>
</div>
