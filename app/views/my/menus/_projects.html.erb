<%= collapsible_nav_section "Projects" do %>
  <li class="popup__item" data-filter-target="item" data-navigable-list-target="item">
    <%= icon_tag "add", class: "popup__icon" %>
    <%= link_to new_project_path, class: "popup__btn btn" do %>
      <span class="overflow-ellipsis">Add a project</span>
    <% end %>
  </li>

  <% projects.each do |project| %>
    <%= my_menu_project_item(project) %>
  <% end %>
<% end %>