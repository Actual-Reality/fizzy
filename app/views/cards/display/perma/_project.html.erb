<div class="card__project flex align-center gap-half" <%= "hidden" if card.closed? %>>
  <% if Current.account.projects.any? %>
    <%= form_with model: card, url: card_project_path(card), method: :patch, class: "card__project-form", data: { controller: "form", action: "change->form#submit" } do |form| %>
      <%= form.collection_select :project_id, Current.account.projects.order(:name), :id, :name, 
            { include_blank: "No Project", selected: card.project_id }, 
            { class: "card__project-select input input--select txt-small txt-dim", 
              "aria-label": "Choose a project for this card" } %>
    <% end %>
  <% else %>
    <span class="txt-small txt-dim">No Project</span>
  <% end %>
</div>
