#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/thrust" ] && [ "${2}" == "./bin/rails" ] && [ "${3}" == "server" ]; then
  if [ -z "${SKIP_DB_PREPARE}" ]; then
    MIGRATE=1 ./bin/rails db:prepare db:migrate:cable db:migrate:cache db:migrate:queue
  fi
fi

exec "${@}"